<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card shadow">
      <div class="card-header bg-danger text-white">
        <h4 class="mb-0">Edit Expense</h4>
      </div>
      <div class="card-body">
        {{#if error}}
          <div class="alert alert-danger">{{error}}</div>
        {{/if}}
        
        <form action="/expenses/edit/{{expense._id}}" method="POST">
          <div class="mb-3">
            <label for="title" class="form-label">Title *</label>
            <input type="text" class="form-control" id="title" name="title" value="{{expense.title}}" required>
          </div>
          
          <div class="mb-3">
            <label for="amount" class="form-label">Amount *</label>
            <div class="input-group">
              <span class="input-group-text">$</span>
              <input type="number" class="form-control" id="amount" name="amount" step="0.01" min="0" value="{{expense.amount}}" required>
            </div>
          </div>
          
          <div class="mb-3">
            <label for="category" class="form-label">Category *</label>
            <select class="form-select" id="category" name="category" required>
              <option value="Rent" {{#if (eq expense.category "Rent")}}selected{{/if}}>Rent</option>
              <option value="Grocery" {{#if (eq expense.category "Grocery")}}selected{{/if}}>Grocery</option>
              <option value="Utility" {{#if (eq expense.category "Utility")}}selected{{/if}}>Utility</option>
              <option value="Transportation" {{#if (eq expense.category "Transportation")}}selected{{/if}}>Transportation</option>
              <option value="Entertainment" {{#if (eq expense.category "Entertainment")}}selected{{/if}}>Entertainment</option>
              <option value="Education" {{#if (eq expense.category "Education")}}selected{{/if}}>Education</option>
              <option value="Other" {{#if (eq expense.category "Other")}}selected{{/if}}>Other</option>
            </select>
          </div>
          
          <div class="mb-3">
            <label for="date" class="form-label">Date *</label>
            <input type="date" class="form-control" id="date" name="date" value="{{formatDateInput expense.date}}" required>
          </div>
          
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" name="description" rows="3">{{expense.description}}</textarea>
          </div>
          
          <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Update Expense</button>
            <a href="/expenses" class="btn btn-outline-secondary">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>



